<Page
    x:Class="Idasen.SystemTray.Win11.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Idasen.SystemTray.Win11.Helpers"
    xmlns:local="clr-namespace:Idasen.SystemTray.Win11.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="640"
    d:DesignWidth="480"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <StackPanel>
        <!-- Todo add icons-->
        <ui:CardExpander
            CornerRadius="0,0,8,8"
            Header="Advanced">
            <StackPanel>
                <TextBlock Margin="0,12,0,0"
                           Text="Settings" />
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="15" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="15" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!-- Row 0 -->
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="Log Folder"
                           ToolTip="Show the location of the log files."
                           VerticalContentAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             IsEnabled="True"
                             IsReadOnly="True"
                             Text="{Binding ViewModel.LogFolderPath}" />
                    <!-- Row 1 Blank -->
                    <!-- Row 2 -->
                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Content="Settings File"
                           ToolTip="Show the location of the settings file."
                           VerticalContentAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             IsEnabled="True"
                             IsReadOnly="True"
                             Text="{Binding ViewModel.SettingsFileFullPath}" />
                    <!-- Row 3 Blank -->
                    <!-- Row 4 -->
                    <Label Grid.Row="4"
                           Grid.Column="0"
                           Content="Last Height"
                           ToolTip="Shows the last known desk height."
                           VerticalContentAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="4"
                             Grid.Column="1"
                             IsEnabled="True"
                             IsReadOnly="True"
                             Text="{Binding ViewModel.LastKnownDeskHeight}" />
                    <!-- Row 5 Blank -->
                    <!-- Row 6 -->
                    <Label Grid.Row="6"
                           Grid.Column="0"
                           Content="Desk Name"
                           ToolTip="Discover the desk by it is Bluetooth device name. Empty means default value."
                           VerticalContentAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="6"
                             Grid.Column="1"
                             Name="DeskName"
                             Width="Auto"
                             Text="{Binding ViewModel.DeskName}" />
                    <!-- Row 7 Blank -->
                    <!-- Row 8 -->
                    <Label Grid.Row="8"
                           Grid.Column="0"
                           Content="Desk Address"
                           ToolTip="Discover the desk by it is Bluetooth device address. Empty means default value."
                           VerticalContentAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="8"
                             Grid.Column="1"
                             Name="DeskAddress"
                             Width="Auto"
                             Text="{Binding ViewModel.DeskAddress}" />
                    <!-- Row 9 Blank -->
                    <!-- Row 10 -->
                    <Label Grid.Row="10"
                           Grid.Column="0"
                           Content="Parental Lock"
                           ToolTip="Blocks manual movements when enabled."
                           VerticalContentAlignment="Center"
                           Padding="5,0,5,0" />
                    <CheckBox Grid.Row="10"
                              Grid.Column="1" Content="Enabled"
                              Name="Locked"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Margin="4,0,0,0"
                              IsChecked="{Binding ViewModel.ParentalLock}" />
                    <!-- Row 11 Blank -->
                    <!-- Row 12 -->
                    <Label Grid.Row="12"
                           Grid.Column="0"
                           Content="Notifications"
                           ToolTip="Show or hide all notifications."
                           VerticalContentAlignment="Center"
                           Padding="5,0,5,0" />
                    <CheckBox Grid.Row="12"
                              Grid.Column="1"
                              Content="Enabled"
                              Name="Notifications"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Margin="4,0,0,0"
                              IsChecked="{Binding ViewModel.Notifications}" />
                    <!-- Row 13 Blank -->
                    <!-- Row 14 -->
                    <Label Grid.Row="14"
                           Grid.Column="0"
                           Content="'Stop' visibility"
                           ToolTip="Show or hide all 'Stop' in the context menu."
                           VerticalContentAlignment="Center"
                           Padding="5,0,5,0" />
                    <CheckBox Grid.Row="14"
                              Grid.Column="1"
                              Content="Enabled"
                              Name="StopIsVisibleInContextMenu"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Margin="4,0,0,0"
                              IsChecked="{Binding ViewModel.StopIsVisibleInContextMenu}" />
                </Grid>
            </StackPanel>
        </ui:CardExpander>
        <ui:CardExpander
            CornerRadius="0,0,8,8"
            Header="Appearance">
            <StackPanel>
                <TextBlock Margin="0,12,0,0"
                           Text="Theme" />
                <RadioButton
                    Margin="0,12,0,0"
                    Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                    CommandParameter="theme_light"
                    Content="Light"
                    GroupName="themeSelect"
                    IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
                <RadioButton
                    Margin="0,8,0,0"
                    Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                    CommandParameter="theme_dark"
                    Content="Dark"
                    GroupName="themeSelect"
                    IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />
                <RadioButton
                    Margin="0,8,0,0"
                    Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                    CommandParameter="theme_high_contrast"
                    Content="High Contrast"
                    GroupName="themeSelect"
                    IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=HighContrast, Mode=OneWay}" />
            </StackPanel>
        </ui:CardExpander>

        <ui:CardExpander
            CornerRadius="0,0,8,8"
            Header="General"
            IsExpanded="True">
            <StackPanel>
                <TextBlock Margin="0,12,0,0"
                           Text="Positions" />
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!-- Row 0 -->
                    <ui:SymbolIcon Grid.Row="0"
                                   Grid.Column="0"
                                   Symbol="{x:Static ui:SymbolRegular.ArrowCircleUp24}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Content="Stand"
                           VerticalAlignment="Center"
                           Padding="5,0,5,0" />
                    <Slider Grid.Row="0"
                            Grid.Column="2"
                            Name="Standing"
                            Minimum="65"
                            Maximum="127"
                            Value="{Binding ViewModel.Standing}"
                            TickPlacement="TopLeft" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="3"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Text="{Binding ElementName=Standing, Path=Value, StringFormat='0', UpdateSourceTrigger=LostFocus}"
                               Padding="5,0,5,0" />
                    <Label Grid.Row="0"
                           Grid.Column="4"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Content="cm" />
                    <CheckBox Grid.Row="0"
                              Grid.Column="5" 
                              VerticalAlignment="Center" 
                              MinWidth="75" 
                              Content="Tray"
                              ToolTip="Show in tray context menu" 
                              IsChecked="{Binding ViewModel.StandingIsVisibleInContextMenu, Mode=TwoWay}" />
                    <!-- Row 1 - Blank -->
                    <!-- Row 2 -->
                    <ui:SymbolIcon Grid.Row="2"
                                   Grid.Column="0"
                                   Symbol="{x:Static ui:SymbolRegular.ArrowCircleDown24}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    <Label Grid.Row="2"
                           Grid.Column="1"
                           Content="Sit"
                           VerticalAlignment="Center"
                           Padding="5,0,5,0" />
                    <Slider Grid.Row="2"
                            Grid.Column="2"
                            Name="Seating"
                            Minimum="65"
                            Maximum="127"
                            Value="{Binding ViewModel.Seating}"
                            TickPlacement="TopLeft" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="3"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Text="{Binding ElementName=Seating, Path=Value, StringFormat='0',UpdateSourceTrigger=LostFocus}"
                               Padding="5,0,5,0" />
                    <Label Grid.Row="2"
                           Grid.Column="4"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Content="cm" />
                    <CheckBox Grid.Row="2"
                              Grid.Column="5" 
                              VerticalAlignment="Center" 
                              MinWidth="75" 
                              Content="Tray" 
                              ToolTip="Show in tray context menu" 
                              IsChecked="{Binding ViewModel.SeatingIsVisibleInContextMenu, Mode=TwoWay}" />
                    <!-- Row 3 - Blank -->
                    <!-- Row 4 -->
                    <ui:SymbolIcon Grid.Row="4"
                                   Grid.Column="0"
                                   Symbol="{x:Static ui:SymbolRegular.ArrowCircleLeft24}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    <Label Grid.Row="4"
                           Grid.Column="1"
                           Content="Custom1"
                           VerticalAlignment="Center"
                           Padding="5,0,5,0" />
                    <Slider Grid.Row="4"
                            Grid.Column="2"
                            Name="Custom1"
                            Minimum="65"
                            Maximum="127"
                            Value="{Binding ViewModel.Custom1}"
                            TickPlacement="TopLeft" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="3"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Text="{Binding ElementName=Custom1, Path=Value, StringFormat='0',UpdateSourceTrigger=LostFocus}"
                               Padding="5,0,5,0" />
                    <Label Grid.Row="4"
                           Grid.Column="4"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Content="cm" />
                    <CheckBox Grid.Row="4"
                              Grid.Column="5" 
                              VerticalAlignment="Center" 
                              MinWidth="75" 
                              Content="Tray" 
                              ToolTip="Show in tray context menu" 
                              IsChecked="{Binding ViewModel.Custom1IsVisibleInContextMenu, Mode=TwoWay}" />
                    <!-- Row 5 - Blank -->
                    <!-- Row 6 -->
                    <ui:SymbolIcon Grid.Row="6"
                                   Grid.Column="0"
                                   Symbol="{x:Static ui:SymbolRegular.ArrowCircleRight24}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    <Label Grid.Row="6"
                           Grid.Column="1"
                           Content="Custom 2"
                           VerticalAlignment="Center"
                           Padding="5,0,5,0" />
                    <Slider Grid.Row="6"
                            Grid.Column="2"
                            Name="Custom2"
                            Minimum="65"
                            Maximum="127"
                            Value="{Binding ViewModel.Custom2}"
                            TickPlacement="TopLeft" />
                    <TextBlock Grid.Row="6"
                               Grid.Column="3"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Text="{Binding ElementName=Custom2, Path=Value, StringFormat='0',UpdateSourceTrigger=LostFocus}"
                               Padding="5,0,5,0" />
                    <Label Grid.Row="6"
                           Grid.Column="4"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Content="cm" />
                    <CheckBox Grid.Row="6"
                              Grid.Column="5" 
                              VerticalAlignment="Center"
                              MinWidth="75" 
                              Content="Tray" 
                              ToolTip="Show in tray context menu" 
                              IsChecked="{Binding ViewModel.Custom2IsVisibleInContextMenu, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </ui:CardExpander>

        <ui:CardExpander
            CornerRadius="0,0,8,8"
            Header="Hot Keys">
            <StackPanel>
                <TextBlock Margin="0,12,0,0"
                           Text="Definitions" />
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!-- Row 0 -->
                    <ui:SymbolIcon Grid.Row="0"
                                   Grid.Column="0"
                                   Symbol="{x:Static ui:SymbolRegular.ArrowCircleUp24}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Content="Stand"
                           ToolTip="The global hot key to move the desk to the standing height."
                           VerticalAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             IsEnabled="False"
                             Text="Ctrl+Shift+Alt+Cursor Up"
                             Width="Auto" />
                    <!-- Row 2 -->
                    <ui:SymbolIcon Grid.Row="2"
                                   Grid.Column="0"
                                   Symbol="{x:Static ui:SymbolRegular.ArrowCircleDown24}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    <Label Grid.Row="2"
                           Grid.Column="1"
                           Content="Sit"
                           ToolTip="The global hot key to move the desk to the seating height."
                           VerticalAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="2"
                             Grid.Column="2"
                             IsEnabled="False"
                             Text="Ctrl+Shift+Alt+Cursor Down"
                             Width="Auto" />
                    <!-- Row 4 -->
                    <ui:SymbolIcon Grid.Row="4"
                                   Grid.Column="0"
                                   Symbol="{x:Static ui:SymbolRegular.ArrowCircleLeft24}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    <Label Grid.Row="4"
                           Grid.Column="1"
                           Content="Custom 1"
                           ToolTip="The global hot key to move the desk to the custom 1 height."
                           VerticalAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="4"
                             Grid.Column="2"
                             IsEnabled="False"
                             Text="Ctrl+Shift+Alt+Cursor Left"
                             Width="Auto" />
                    <!-- Row 6 -->
                    <ui:SymbolIcon Grid.Row="6"
                                   Grid.Column="0"
                                   Symbol="{x:Static ui:SymbolRegular.ArrowCircleRight24}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    <Label Grid.Row="6"
                           Grid.Column="1"
                           Content="Custom 2"
                           ToolTip="The global hot key to move the desk to the custom 2 height."
                           VerticalAlignment="Center"
                           Padding="5,0,5,0" />
                    <TextBox Grid.Row="6"
                             Grid.Column="2"
                             IsEnabled="False"
                             Text="Ctrl+Shift+Alt+Cursor Right"
                             Width="Auto" />
                </Grid>
            </StackPanel>
        </ui:CardExpander>
    </StackPanel>
</Page>