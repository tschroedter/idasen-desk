<Page x:Class="Idasen.SystemTray.Win11.Views.Pages.SitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Idasen.SystemTray.Win11.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="SitPage"
      d:DataContext="{d:DesignInstance local:SitPage, IsDesignTimeCreatable=False}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top">
        <TextBlock
            Margin="0,12,0,0"
            HorizontalAlignment="Left"
            TextWrapping="Wrap"
            FontWeight="Bold"
            Text="{Binding ViewModel.Title}" />
        <TextBlock
            Margin="0,12,0,0"
            HorizontalAlignment="Left"
            TextWrapping="Wrap"
            FontWeight="Medium"
            Text="{Binding ViewModel.Status}" />
        <TextBlock
            Margin="0,12,0,0"
            HorizontalAlignment="Left"
            TextWrapping="Wrap"
            Text="This page moves the desk into the sitting position." />
        <ui:Button
            Command="{Binding ViewModel.SitCommand, Mode=OneWay}"
            Content="Sit"
            Icon="Fluent24" />
        <ui:Button
            Command="{Binding ViewModel.NewSitCommand, Mode=OneWay}"
            Content="Sit"
            Icon="Fluent24" />
    </StackPanel>
</Page>
